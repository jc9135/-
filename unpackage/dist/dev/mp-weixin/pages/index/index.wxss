.content .user_info {
  background: url(https://hsm.aylzwl.com/wmq/static/index_bg.jpg) no-repeat center top;
  background-size: 100% 100%;
  width: 90%;
  height: 350rpx;
  border-radius: 10rpx;
  margin: 20rpx auto;
}
.content .user_info .info_box {
  padding: 50rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.content .user_info .info_box .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.content .user_info .info_box .info {
  color: #fff;
  font-size: 30rpx;
  margin-left: 15rpx;
  line-height: 50rpx;
}
.content .user_info .money_box {
  padding: 10rpx 50rpx;
}
.content .user_info .money_box text {
  display: inline-block;
  width: 25%;
  text-align: center;
  color: #fff;
}
.content .user_info .money_box .money_top text {
  font-weight: 600;
  font-size: 34rpx;
}
.content .user_info .money_box .money_bottom text {
  font-size: 26rpx;
}
.content .user_click {
  padding: 20rpx;
  width: 90%;
  margin: 0 auto;
}
.content .user_click .click_item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin: 15rpx 0;
  padding: 15rpx;
  border-bottom: 1px solid #eee;
}
.content .user_click .click_item text {
  color: #eee;
  font-size: 30rpx;
}
.content .user_click .click_item view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.content .user_click .click_item view image {
  width: 60rpx;
  height: 60rpx;
}
.content .user_click .click_item view text {
  font-size: 30rpx;
  margin-left: 20rpx;
  color: #000;
}

